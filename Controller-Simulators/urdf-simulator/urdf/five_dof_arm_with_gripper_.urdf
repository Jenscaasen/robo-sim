<?xml version="1.0"?>
<robot name="FiveDofArmWithGripper">

  <!-- Base link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="3.0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.1"/>
      </geometry>
      <material name="grey">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Link 1 -->
  <link name="link1">
    <inertial>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.002"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.4 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 1: base -> link1 (yaw) -->
  <joint name="shoulder_yaw" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.1416" upper="3.1416" effort="50" velocity="2.0"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- Link 2 -->
  <link name="link2">
    <inertial>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <mass value="0.8"/>
      <inertia ixx="0.004" ixy="0.0" ixz="0.0" iyy="0.004" iyz="0.0" izz="0.0015"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.25"/>
      </geometry>
      <material name="orange">
        <color rgba="0.9 0.4 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.125" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.25"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 2: link1 -> link2 (shoulder pitch) -->
  <joint name="shoulder_pitch" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.3562" upper="2.3562" effort="40" velocity="2.0"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- Link 3 -->
  <link name="link3">
    <inertial>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <mass value="0.6"/>
      <inertia ixx="0.003" ixy="0.0" ixz="0.0" iyy="0.003" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.2"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.2"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 3: link2 -> link3 (elbow pitch) -->
  <joint name="elbow_pitch" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.3562" upper="2.3562" effort="30" velocity="2.0"/>
    <dynamics damping="0.1" friction="0.0"/>
  </joint>

  <!-- Link 4 -->
  <link name="link4">
    <inertial>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <mass value="0.4"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.0008"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.15"/>
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.15"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 4: link3 -> link4 (wrist roll) -->
  <joint name="wrist_roll_1" type="revolute">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.1416" upper="3.1416" effort="20" velocity="2.5"/>
    <dynamics damping="0.05" friction="0.0"/>
  </joint>

  <!-- Link 5 -->
  <link name="link5">
    <inertial>
      <origin xyz="0 0 0.065" rpy="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.0005"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.065" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.13"/>
      </geometry>
      <material name="red">
        <color rgba="0.9 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.065" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.13"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 5: link4 -> link5 (wrist yaw) -->
  <joint name="wrist_yaw" type="revolute">
    <parent link="link4"/>
    <child link="link5"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.1416" upper="3.1416" effort="10" velocity="3.0"/>
    <dynamics damping="0.02" friction="0.0"/>
  </joint>

  <!-- ============================================= -->
  <!-- PANDA HAND GRIPPER SYSTEM (replacing end_effector) -->
  <!-- ============================================= -->

  <!-- Joint connecting link5 to panda_hand -->
  <joint name="panda_hand_joint" type="fixed">
    <origin rpy="0 0 -0.785398163397" xyz="0 0 0.13"/>
    <parent link="link5"/>
    <child link="panda_hand"/>
  </joint>

  <!-- Panda Hand Base -->
  <link name="panda_hand">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.04"/>
      <mass value="0.81"/>
      <inertia ixx="0.1" ixy="0" ixz="0"
               iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <!-- Hand box visual - now purple for identification -->
    <visual name="hand_box">
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.08"/>
      </geometry>
      <material name="hand_material_purple">
        <color rgba="0.5 0.0 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.08"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Finger -->
  <link name="panda_leftfinger">
    <contact>
      <friction_anchor/>
      <stiffness value="30000"/>
      <damping   value="1000"/>
      <spinning_friction value="0.1"/>
      <lateral_friction  value="1.0"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0.01 0.02"/>
      <mass value="0.1"/>
      <inertia ixx="0.1" ixy="0" ixz="0"
               iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry><mesh filename="package://meshes/visual/finger.obj"/></geometry>
      <material name="panda_leftfinger_white"><color rgba="1 1 1 1"/></material>
    </visual>
    <collision>
      <geometry><mesh filename="package://meshes/collision/finger.obj"/></geometry>
    </collision>
  </link>

  <!-- Right Finger -->
  <link name="panda_rightfinger">
    <contact>
      <friction_anchor/>
      <stiffness value="30000"/>
      <damping   value="1000"/>
      <spinning_friction value="0.1"/>
      <lateral_friction  value="1.0"/>
    </contact>
    <inertial>
      <origin rpy="0 0 0" xyz="0 -0.01 0.02"/>
      <mass value="0.1"/>
      <inertia ixx="0.1" ixy="0" ixz="0"
               iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin rpy="0 0 3.14159265359" xyz="0 0 0"/>
      <geometry><mesh filename="package://meshes/visual/finger.obj"/></geometry>
      <material name="panda_rightfinger_white"><color rgba="1 1 1 1"/></material>
    </visual>
    <collision>
      <origin rpy="0 0 3.14159265359" xyz="0 0 0"/>
      <geometry><mesh filename="package://meshes/collision/finger.obj"/></geometry>
    </collision>
  </link>

  <!-- Left Finger Prismatic Joint -->
  <joint name="panda_finger_joint1" type="prismatic">
    <origin rpy="0 0 0" xyz="0 0 0.0584"/>
    <parent link="panda_hand"/>
    <child link="panda_leftfinger"/>
    <axis xyz="0 1 0"/>
    <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
  </joint>

  <!-- Right Finger Prismatic Joint (mimics left finger) -->
  <joint name="panda_finger_joint2" type="prismatic">
    <origin rpy="0 0 0" xyz="0 0 0.0584"/>
    <parent link="panda_hand"/>
    <child link="panda_rightfinger"/>
    <axis xyz="0 -1 0"/>
    <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
    <mimic joint="panda_finger_joint1"/>
  </joint>

  <!-- Grasp Target (for planning purposes) -->
  <link name="panda_grasptarget">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0"
               iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
<!-- Grasp Target Joint -->
<joint name="panda_grasptarget_hand" type="fixed">
  <origin rpy="0 0 0" xyz="0 0 0.105"/>
  <parent link="panda_hand"/>
  <child link="panda_grasptarget"/>
</joint>

</robot>
